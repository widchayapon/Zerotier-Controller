extends controller_layout
block content
  meta(charset="utf-8")
  title Load Test Performance Dashboard
  script(src="https://cdn.plot.ly/plotly-latest.min.js")
  style.
    
      body {
        font-family: sans-serif;   
        box-sizing: border-box;
        margin: 0 auto;
        padding: 0 auto;
      
      }
      .alert {
        font-weight: bold;
        color: red;
      }
      h1 {
        text-align: left;
        margin-top: 50px;
        color: #fff;
        font-weight: bold;
        text-align: center;

      }
        .chart-container {
           display: flex;
          flex-direction: row;
          justify-content: space-around;
          grid-template-columns: 90px 50px auto auto;
          margin-top: 100px;

        }
    
        .chart {
          color: #fff;
          width: 550px;
          height: 400px;
          margin-top:5px;
          justify-content: space-between;
          border-radius: 10px;
          box-shadow: 1px 1px 1px #ccc;

        }
    
        .chart-title {
          text-align: center;
          margin-top: 20px;
          font-size: 24px;
          font-weight: bold;
          color: white;

        }
    
        .chart-container:nth-child(odd) .chart {
           margin-left: 5px;

        }
    
        @media screen and (max-width: 768px) {
          .chart-container {
            flex-direction: column;
          }
    
          .chart {
            width: 100%;
            margin-bottom: 20px;
          }
    
          .chart-container:nth-child(odd) .chart {
            margin-right: 0px;
          }
        }
          .dashboard {
             display: flex;
            flex-wrap: wrap;
            justify-content: left;
            align-items: left;
            height: 100%;

        }
        .card {
            margin: auto ;
            padding: auto;
            width: 300px;
            height: 200px;
            border: 1px solid #ccc;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            background-color: #fff;

        }
        .card h2 {
            font-size: 24px;
            margin: 0;
            padding: 0;
            text-align: center;
            font-weight: bold;
            margin-top:10px;

        }
        .card p {
          font-size: 18px;
          margin: 0;
          padding: 0;
          text-align: center;

        }
        .card .value {
            font-size: 32px;
            font-weight: bold;
            margin: 0;
            padding: 0;
            text-align: center;

        }
        .card .icon {
            font-size: 64px;
            color: #ccc;
            text-align: center;
        }
        .card .icon i {
            margin-top: 20px;
        }
        .card .progress-bar {
            width: 100%;
            height: 10px;
            background-color: #ccc;
            border-radius: 5px;
            overflow: hidden;
        }
        .card .progress {
            height: 100%;
            background-color: #2ecc71;
            border-radius: 5px;
            transition: width 0.5s ease-in-out;
        }
        .box{
          display: flex;
          flex-wrap:wrap;
          justify-content: space-evenly;
          margin-top: 80px;
        }
        .chart2{
          display:flex;
          flex-wrap:wrap;
            justify-content: space-between;
          position:absolute;
          right: 0px;
          top: 95px;
          width: 550px;
          color: #fff;


      }

    
  h1 Load Test Performance Dashboard
  .chart-container
    .chart#chart1
      .chart-title Load Test Performance
    .chart#chart2
      .chart-title Network Performance
  .box
    .dashboard
    .card
      h2 Network Latency
      .icon
        i.fas.fa-network-wired
      p Average Latency
      p.value 50 ms
      .progress-bar
        .progress(style="width: 80%;")
    .card
      h2 Network Throughput
      .icon
        i.fas.fa-tachometer-alt
      p Average Throughput
      p.value 100 Mbps
      .progress-bar
        .progress(style="width: 50%;")
    .card
      h2 Network Errors
      .icon
        i.fas.fa-exclamation-triangle
      p Total Errors
      p.value 10%
      .progress-bar
        .progress(style="width: 10%;")

  script.
    alert("Hi welcome!, this page shows all connections of nodes and shows each node's performance data. ");
    // Define the data for the charts
        var data1 = [
          {
            x: ['Jan', 'Feb', 'Mar', 'Apr', 'May'],
            y: [100, 200, 300, 250, 150],
            type: 'line',
            name: 'Requests per Second'
          },
          {
            x: ['Jan', 'Feb', 'Mar', 'Apr', 'May'],
            y: [10, 20, 15, 30, 25],
            type: 'line',
            name: 'Error Rate'
          }
        ];
    
        var data2 = [
          {
            x: ['Jan', 'Feb', 'Mar', 'Apr', 'May'],
            y: [50, 75, 100, 125, 150],
            type: 'bar',
            name: 'Throughput'
          }
        ];
    
        // Define the layout for the charts
        var layout1 = {
          xaxis: {
            title: 'Month'
          },
          yaxis: {
            title: 'Requests per Second / Error Rate'
          }
        };
    
        var layout2 = {
          xaxis: {
            title: 'Month'
          },
          yaxis: {
            title: 'Throughput'
          }
        };
    
        // Create the charts using Plotly
        Plotly.newPlot('chart1', data1, layout1);
        Plotly.newPlot('chart2', data2, layout2);
  //- include ./footer.pug
