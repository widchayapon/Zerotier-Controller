style.
  
  * {
              margin: 0;
              padding: 0;
              box-sizing: border-box;
              font-family: Arial;
          }
          
          * a {
              text-decoration: none;
          }
          
          * li {
              list-style: none;
          }
          
          .container {
              position: relative;
              min-height: 100vh;
          }
          
          .bg {
              width: 100%;
              height: 100%;
              position: relative;
          }
          
           .bg::after{
            content: "";
            position: absolute;
            top: 0;
            left: -80;
            right: 5;
            width: 100vw;
            height: 100vh;
            background-image: url('https://c4.wallpaperflare.com/wallpaper/166/619/692/data-center-server-technology-network-wallpaper-preview.jpg');
            background-size: cover;
            background-position: center;
            height: 100vh;
           
            display: flex;
            align-items: center;
            justify-content: center;
            background-repeat: no-repeat;
            filter: brightness(45%);
            z-index: -1;
        }

          .menu {
              position: relative;
              width: 85%;
              height: 15vh;
              margin: 0 auto;
              display: flex;
              justify-content: space-between;
              align-items: center;
          }
          
          .logo a {
              font-size: 2.5rem;
              color: white;
          }
          
          .menu ul {
              display: flex;
              align-items: center;
          }
          
          .menu ul li {
              padding: 0 25px;
          }
          
          .menu ul li a {
              font-weight: bold;
              color: #fff;
              font-size: 15px;
          }
          /* .menu ul li a::after{
              border-radius: 5px;
              box-sizing: border-box;
          } */
          
          .content {
              width: 85%;
              margin: 0 auto;
              position: absolute;
              top: 60%;
              left: 50%;
              transform: translate(-50%, -50%);
              display: flex;
          }
          
          .content .header,
          .grid-card {
              width: 50%;
              position: relative;
          }
          
          .content .header {
              color: #fff;
              padding: 50px;
          }
          
          .content .header h3 {
              font-size: 2.3rem;
              letter-spacing: 3px;
          }
          
          .content .header h3 i {
              color: #fff;
              filter: brightness(75%);
              padding: 5px 10px;
          }
          
          .content .header h1 {
              font-size: 3rem;
              font-weight: bold;
          }
          
          .content .header p {
              opacity: .7;
          }
          
          .grid-card {
              display: grid;
              grid-template-columns: auto auto;
              grid-gap: 30px;
              color: #fff;
          }
          
          .grid-card .box {
              width: 100%;
              height: 250px;
              background-position: center;
              background-size: cover;
              border-radius: 25px;
              position: relative;
              transition: .4s;
          }
          
          .bg1 {
              background-image: url('https://cdn.pixabay.com/photo/2014/02/13/07/28/security-265130_640.jpg');
          }
          
          .bg2 {
              background-image: url('https://cdn.pixabay.com/photo/2017/09/04/16/26/jongno-2714601_640.jpg');
          }
          
          .bg3 {
              background-image: url('https://cdn.pixabay.com/photo/2018/02/23/04/38/computer-3174729_640.jpg');
          }
          
          .bg4 {
              background-image: url('https://cdn.pixabay.com/photo/2016/11/29/09/16/architecture-1868667_640.jpg');
          }
          
          .content .box h2 {
              position: absolute;
              bottom: 10px;
              left: 15px;
              font-weight: bold;
          }
          
          .content .box:hover {
              transform: translateY(-15px);
          }
          
          .header button {
              border: solid 2px;
              background: none;
              color: #fff;
              border-radius: 25px;
              font-size: 1rem;
              padding: 5px 15px;
          }
          
          .header button a {
              text-decoration: none;
              color: #fff;
              cursor: pointer;
          }
          
          .header button a:hover {
              transform: translateY(-10);
              color: yellow;
          }
          
          .menu ul li button {
              border: solid 2px;
              background: none;
              color: #fff;
              border-radius: 15px;
              font-size: 1rem;
              padding: 5px 15px;
              cursor: pointer;
          }
